@charset "utf-8";
/* CSS Document */

@media screen and (max-width:1000px) 
{



#top-wrapper
{
	width:100%;
	min-height:630px;
	min-width:1000px;
	background:url(../images/header-bg.jpg) top center no-repeat;
}

.header
{
	width:1000px;
	margin:0 auto;
}

.wrapper
{
	width:1000px;
	margin:0 auto;
	/*border:1px solid red;
	overflow:hidden;*/	
}

#header
{
	width:100%;
	float:left;
	background:url(../images/header-bg.jpg) 0 0 no-repeat;
	min-height:630px;
	min-width:1000px;
	/*background-size:cover;
	-moz-background-size:cover;
	-webkit--moz-background-size:cover;
	-o--moz-background-size:cover;
	-ms--moz-background-size:cover;*/
}

.top-header
{
	width:1000px;
	float:left;
	margin-top:25px;	
}

.promo
{
	width:415px;
	float:left;
	text-align:center;
	margin-top:-15px;
}

.top-header-right
{
	margin-right:20px;	
}

.logo
{
	margin-left:20px;	
}



/* ================= *** Navigation *** ================= */

.nav
{
	width:1000px;
	height:53px;
	float:left;
	margin-top:3px;
	background:url(../images/nav-bg.png) no-repeat;
	background-size:100% 100%;
}

.nav ul
{
	float:left;
	list-style:none;
	margin:0px 0 0 15px;	
}

.nav ul li
{
	display:inline-block;
	background:url(../images/nav-divider.png) 0 6px no-repeat;
	padding:5px 5px;
	line-height:21px;
	margin-top:4px;
}

/* =========== Body Sectio ============= */

/* ========== body Left Section ============== */

.body-left
{
	width:633px;
	float:left;
	margin-top:35px;	
}

.bl-top, .bl-bottom
{
	width:633px;
	float:left;	
}

.bl-top img, .bl-bottom img
{
	width:100%;
	float:left;	
}

.bl-mid
{
	width:593px;
	float:left;
	background:#fff;
	padding:0 20px;	
	min-height:200px;
}

.bl-heading, .bl-paragraph
{
	width:593px; 
	float:left;	
}

.bl-heading h1 
{
	font-family:"MS PMincho";
	font-size:44px;
	color:#343434;
	font-weight:normal;
}

.bl-heading h4 
{
	font-size:18px;
	color:#851640;
	float:left;
	font-weight:normal;	
}

.bl-img
{
	width:593px;
	float:left;
	margin-top:15px;	
}

.bl-mid .bl-img img
{
	width:100%;
	float:left;	
}


/* ================ Three Columns ================= */

.three-column
{
	width:1000px;
	float:left;
	margin-top:22px;	
}

.column-1, .column-2, .column-3
{
	width:315px;
	float:left;	
}

.column-2
{
	margin:0 27px;	
}

.column-one-top
{
	width:315px;
	float:left;
	height:11px;
	background:url(../images/top-dft-img.png) no-repeat;
	background-size:100% 100%;
}

.column-one-mid
{
	width:293px;
	float:left;
	padding:0 11px;
	background:#edd9bc;
}

.column-one-mid img
{
	float:left;
	width:100%;	
}

.column-one-mid h2
{
	width:293px;
	float:left;
	margin-top:5px;
	font-family:calibri;
	font-size:20px;
	color:#4d3001;	
}

.column-one-bottom
{
	width:315px;
	float:left;
	height:11px;
	background:url(../images/bottom-dft.png) no-repeat;
	background-size:100% 100%;
}

#footer
{
	width:100%;
	height:79px;
	background:url(../images/footer-bg.png) repeat-x;	
	margin-top:15px;
	min-width:1000px;
}

.column-1:hover .column-one-top, .column-2:hover .column-one-top, .column-3:hover .column-one-top
{
	background:url(../images/top-hover-img.png) no-repeat;
	background-size:100% 100%;
}

.column-1:hover .column-one-mid, .column-2:hover .column-one-mid, .column-3:hover .column-one-mid
{
	background:#c3a482;
}

.column-1:hover .column-one-bottom, .column-2:hover .column-one-bottom, .column-3:hover .column-one-bottom
{
	background:url(../images/bottom-hover.png) no-repeat;
	background-size:100% 100%;	
}

	
}